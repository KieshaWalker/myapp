<!DOCTYPE html>
<!--
  habitLogs/index.ejs — Show logs for a specific habit.
  We loop over `logs` (passed by controller) and use <%= %> to safely print values.
-->
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Habit Logs</title>
  <link rel="stylesheet" href="/index.css" />
</head>
<body>
  <header>
    <h1>Logs for <%= habit.title %></h1>
    <%- include('../partials/nav') %>
  </header>
  <a href="/logs/<%= habit._id %>/new">Add Log</a>
  <ul>
    <% logs.forEach(l => { %>
      <li>
        <!-- Format the date client-side for simplicity; server could pre-format if needed. -->
        <%= new Date(l.date).toLocaleString() %> — <%= l.status %>
        <!-- Method override pattern for DELETE -->
        <form style="display:inline" action="/logs/<%= habit._id %>/<%= l._id %>?_method=DELETE" method="POST">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
  <p><a href="/habits">Back to Habits</a></p>
</body>
</html>
